    <solid android:color="#e8f2e6e6" />
    <!-- 边框色 -->
    <stroke
        android:width="0.1dp"
        android:color="#FFDA1A4D" />
    <padding
        android:bottom="0.1dp"
        android:left="0.2dp"
        android:right="0.2dp"
        android:top="0.1dp" />
